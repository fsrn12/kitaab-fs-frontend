<!DOCTYPE html>
<html lang="en">

<head>
  <%-include('includes/head') %>
  <title><%=title%></title>
</head>

<body id="page-top">
  <header>
    <%-include('includes/nav')%>
  </header>

  <section class="signup-section" id="signup">
    <div class="container px-4 px-lg-5">
      <div class="row gx-4 gx-lg-5">
        <div class="col-md-10 col-lg-8 mx-auto text-left">
          <i class="far fa-paper-plane fa-2x mb-2 text-white"></i>
          <h2 name="h2-title" class="text-white mb-5">Edit a book</h2>

          <form class="form-signup" id="editBookForm" action="/books/update" method="POST">
            <% if(typeof(message) != 'undefined'){%>
            <h4 style="color: green"><%-message%></h4>
            <%}%>
              <div class="row input-group-newsletter">
                <div class="col">

                  <!-- Create a Hidden Field in the Form
                  to Acquire bookId -->
                  <% if(typeof(data) !== 'undefined'){%>
            <input type="hidden" name="id" value="<%-data._id%>" />
            <%}%>

                  <input class="form-control" id="title" type="text"
                  name="title" placeholder="Enter title..." aria-label="Enter
                  title..." <% if(typeof(data) !== "undefined" ) {%>
            value="<%-data.title%>" <%}%> /> <% if(typeof(errs) !=
                  "undefined") {%>
            <span style="color: red"><%-errs.titleMsg%></span>
            <% } %>
        </div>
      </div>

      <div class="space"></div>
      // Author
      <div class="row input-group-newsletter">
        <div class="col">
          <input class="form-control" id="author" type="text" name="author" placeholder="Enter author..." aria-label="Enter
                  author..." <% if(typeof(data) !== "undefined" ) {%> value="<%-data.author%>" <%}%> /> <% if(typeof(errs) !=
                  "undefined") {%> <span style="color: red"><%-errs.authorMsg%></span>
          <% } %>
        </div>
      </div>
      <div class="space"></div>
      <div class="row input-group-newsletter">
        <div class="col">
          <input class="form-control" id="ISBN" type="text" name="ISBN" placeholder="Enter ISBN..." aria-label="Enter ISBN..." <%
                  if(typeof(data) !== "undefined" ) {%> value="<%-data.ISBN%>" <%}%> /> <% if(typeof(errs) != "undefined") {%> <span style="color: red"><%-errs.ISBNMsg%></span>
          <% } %>
        </div>
      </div>


      <div class="space"></div>
      // Year Published
      <div class="row input-group-newsletter">
        <div class="col">
          <input class="form-control" id="publisher" type="text" name="publisher" placeholder="Enter Publisher" aria-label="Enter Publisher" <% if(typeof(data) !==
                  "undefined" ) {%> value="<%-data.publisher%>" <%}%> /> <%
                  if(typeof(errs) != "undefined") {%> <span style="color: red"><%-errs.publisherMsg%></span>
          <% } %>
        </div>
      </div>


      <div class="space"></div>
      // Year Published
      <div class="row input-group-newsletter">
        <div class="col">
          <input class="form-control" id="yearPublished" type="text" name="yearPublished" placeholder="Enter Year Published" aria-label="Enter Year of Publication" <% if(typeof(data) !==
                  "undefined" ) {%> value="<%-data.yearPublished%>" <%}%> /> <%
                  if(typeof(errs) != "undefined") {%> <span style="color: red"><%-errs.yearPublishedMsg%></span>
          <% } %>
        </div>
      </div>

      <div class="space"></div>
      // Number of Pages
      <div class="row input-group-newsletter">
        <div class="col">
          <input class="form-control" id="numberOfPages" type="text" name="numberOfPages" placeholder="Enter number Of Pages..." aria-label="Enter number Of Pages..." <% if(typeof(data) !==
                  "undefined" ) {%> value="<%-data.numberOfPages%>" <%}%> /> <%
                  if(typeof(errs) != "undefined") {%> <span style="color: red"><%-errs.numberOfPagesMsg%></span>
          <% } %>
        </div>
      </div>

      <div class="space"></div>
      // Price
      <div class="row input-group-newsletter">
        <div class="col">
          <input class="form-control" id="price" type="text" name="price" placeholder="Enter price..." aria-label="Enter
                  price..." <% if(typeof(data) !== "undefined" ) {%> value="<%-data.price%>" <%}%> /> <% if(typeof(errs) !=
                  "undefined") {%> <span style="color: red"><%-errs.priceMsg%></span>
          <% } %>
        </div>
      </div>


      <div class="space"></div>
      <div>
        <div class="col-auto">
          <button class="btn btn-primary" id="submitButton" type="submit" name="editBook-btn">
            Edit Book!
          </button>
        </div>
      </div>

      </form>
    </div>
    </div>
    </div>
  </section>
  <!-- Footer-->
  <%-include('includes/footer')%>

</body>

</html>
