<!DOCTYPE html>
<html lang="en">

<head>
  <%-include('includes/head') %>
  <title><%=title%></title>

</head>

<body id="page-top">
  <!-- Navigation-->
  <%-include('includes/nav')%>
  <!-- Signup-->
  <section class="signup-section" id="signup">
    <div class="container px-4 px-lg-5">
      <div class="row gx-4 gx-lg-5">
        <div class="col-md-10 col-lg-8 mx-auto text-left">
          <i class="far fa-paper-plane fa-2x mb-2 text-white"></i>
          <h2 name="h2-title" class="text-white mb-5">Edit an author</h2>

          <form class="form-signup" id="editBookForm" action="/authors/update" method="POST">
            <% if(typeof(message) != 'undefined'){%>
            <h4 name="message" style="color: green"><%-message%></h4>
            <%}%>
              <div class="row input-group-newsletter">
                <div class="col">
                  <% if(typeof(data) !== 'undefined'){%>
            <!-- HIDDEN FIELD TO ACQUIRE AUTHOR ID -->
            <input type="hidden" name="id" value="<%-data._id%>" />

            <%}%> <input class="form-control" id="name" type="text"
                  name="name" placeholder="Enter Name" aria-label="Enter
                  Name" <% if(typeof(data) !== "undefined" ) {%>
            value="<%-data.name%>" <%}%> /> <% if(typeof(errs) !=
                  "undefined") {%>
            <span style="color: red"><%-errs.nameMsg%></span>
            <% } %>
        </div>
      </div>
      // BOOK
      <div class="space"></div>
      <div class="row input-group-newsletter">
        <div class="col">
          <input class="form-control" id="book" type="text" name="book" placeholder="Enter book" aria-label="Enter book" <%
                  if(typeof(data) !== "undefined" ) {%> value="<%-data.book[0].title%>" <%}%> readonly/> <%
                  if(typeof(errs) != "undefined") {%> <span style="color: red"><%-errs.authorMsg%></span>
          <% } %>
        </div>
      </div>
      // PUBLISHER
      <div class="space"></div>
      <div class="row input-group-newsletter">
        <div class="col">
          <input class="form-control" id="publisher" type="text" name="publisher" placeholder="Enter publisher..." aria-label="Enter publisher..." <% if(typeof(data) !==
                  "undefined" ) {%> value="<%-data.publisher%>" <%}%> /> <%
                  if(typeof(errs) != "undefined") {%> <span style="color: red"><%-errs.publisherMsg%></span>
          <% } %>
        </div>
      </div>
      // WEBSITE
      <div class="space"></div>
      <div class="row input-group-newsletter">
        <div class="col">
          <input class="form-control" id="website" type="text" name="website" placeholder="Enter website..." aria-label="Enter website..." <% if(typeof(data) !==
                  "undefined" ) {%> value="<%-data.website%>" <%}%> /> <%
                  if(typeof(errs) != "undefined") {%> <span style="color: red"><%-errs.websiteMsg%></span>
          <% } %>
        </div>
      </div>
      // TWITTER
      <div class="space"></div>
      <div class="row input-group-newsletter">
        <div class="col">
          <input class="form-control" id="twitter" type="text" name="twitter" placeholder="Enter twitter..." aria-label="Enter twitter..." <% if(typeof(data) !==
                  "undefined" ) {%> value="<%-data.twitter%>" <%}%> /> <%
                  if(typeof(errs) != "undefined") {%> <span style="color: red"><%-errs.twitterMsg%></span>
          <% } %>
        </div>
      </div>
      // ABOUT
      <div class="space"></div>
      <div class="row input-group-newsletter">
        <div class="col">
          <input class="form-control" type="text" name="about" placeholder="Enter about..." aria-label="Enter about..." <%
                  if(typeof(data) !== "undefined" ) {%> value="<%-data.about%>" <%}%> /> <% if(typeof(errs) != "undefined") {%> <span style="color: red"><%-errs.aboutMsg%></span>
          <% } %>
        </div>
      </div>
      <div class="space"></div>
      <div>
        <div class="col-auto">
          <button class="btn btn-primary" id="submitButton" type="submit" name="editAuthor-btn">
            Edit Author!
          </button>
        </div>
      </div>
      </form>
    </div>
    </div>
    </div>
  </section>
  <!-- Footer-->
  <%-include('includes/footer')%>

</body>

</html>
